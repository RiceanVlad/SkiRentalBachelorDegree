<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.skirental.ui.fragments.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_homeFragment_to_weatherFragment"
            app:destination="@id/weatherFragment"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_rentChoosePersonFragment"
            app:destination="@id/rentChoosePersonFragment" />
        <action
            android:id="@+id/action_homeFragment_to_modifyPersonalDetailsFragment"
            app:destination="@id/modifyPersonalDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.example.skirental.ui.fragments.WeatherFragment"
        android:label="weather_fragment"
        tools:layout="@layout/weather_fragment" />
    <fragment
        android:id="@+id/rentChoosePersonFragment"
        android:name="com.example.skirental.ui.fragments.RentChoosePersonFragment"
        android:label="rent_choose_person_fragment"
        tools:layout="@layout/rent_choose_person_fragment" />
    <fragment
        android:id="@+id/modifyPersonalDetailsFragment"
        android:name="com.example.skirental.ui.fragments.ModifyPersonalDetailsFragment"
        android:label="modify_personal_details_fragment"
        tools:layout="@layout/modify_personal_details_fragment" />
</navigation>