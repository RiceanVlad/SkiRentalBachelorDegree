<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/custom_primaryColor</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/fugaz_one</item>
    </style>
    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="ListItemTitleStyle" parent="">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/alice</item>
    </style>
    <style name="ListItemPriceStyle" parent="">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_red</item>
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/alice</item>
    </style>
    <style name="ListItemConditionStyle" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/alice</item>
    </style>
    <style name="SearchItemTextViewStyle" parent="">
        <item name="android:background">@drawable/rounded_corners_white_transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen_search_item</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/alice</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>

    </style>
    <style name="SearchItemImageViewStyle" parent="">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>
</resources>