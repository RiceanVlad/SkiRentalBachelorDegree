<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/rounded_corners_light_grey"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_popup_title"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="@string/filter_equipments"
                />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cb_popup_user_equipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fit_my_requirements"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_popup_title"
                app:layout_constraintStart_toStartOf="@+id/tv_popup_title"
                app:layout_constraintEnd_toEndOf="@+id/tv_popup_title"
                app:layout_constraintBottom_toTopOf="@+id/spinner_length"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_height_label_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/length"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@+id/spinner_length"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_length"
                app:layout_constraintEnd_toStartOf="@+id/spinner_length"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_length"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/cb_popup_user_equipment"
                app:layout_constraintStart_toStartOf="@id/cb_popup_user_equipment"
                app:layout_constraintEnd_toEndOf="@id/cb_popup_user_equipment"
                app:layout_constraintBottom_toTopOf="@+id/spinner_shoesize_filter"
                />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_shoesize_filter"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/spinner_length"
                app:layout_constraintStart_toStartOf="@id/spinner_length"
                app:layout_constraintEnd_toEndOf="@id/spinner_length"
                app:layout_constraintBottom_toTopOf="@+id/btn_apply_filter"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_shoesize_label_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shoe_size"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@+id/spinner_shoesize_filter"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_shoesize_filter"
                app:layout_constraintEnd_toStartOf="@+id/spinner_shoesize_filter"/>

            <Button
                android:id="@+id/btn_apply_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/apply_filters"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner_shoesize_filter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>